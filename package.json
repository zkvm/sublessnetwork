{
  "name": "x402x-payment-service",
  "version": "1.0.0",
  "description": "X402 payment service for knowledge sharing platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch payment/index.ts",
    "dev:resource": "tsx watch resource/index.ts",
    "dev:app": "cd app && next dev --port 3000",
    "build": "tsc",
    "build:app": "cd app && next build",
    "start": "node dist/index.js",
    "start:app": "cd app && next start",
    "lint": "eslint payment resource --ext .ts",
    "test": "vitest"
